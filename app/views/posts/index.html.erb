<h3>Lista wpisów</h3>

<% content_for :jumbotron_content do %>
  <p>Witaj w super CRUDzie!</p>
<% end %>

<p>
  <%= link_to "Dodaj nowy wpis", new_post_path, class: "btn btn-success" %>
</p>

<ul class="nav nav-tabs">
  <li <% if params[:action] == "index" %>class="active"<% end %>><%= link_to "Wszystkie", posts_path %></li>
  <li <% if params[:action] == "published" %>class="active"<% end %>><%= link_to "Opublikowane", published_posts_path %></li>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>Opublikowany?</th>
      <th>Treść</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title.html_safe %></td>
        <td><%= post.author %></td>
        <td><%= post.published ? "tak" : "nie" %></td>
        <td><%= post.body %></td>
        <td>
          <%= link_to "Pokaż", post_path(post), class: "btn btn-default btn-xs" %>
          <%= link_to "Edytuj", edit_post_path(post), class: "btn btn-primary btn-xs" %>
          <%= link_to "Usuń", confirm_destroy_post_path(post), class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
